{
  "manifest_version": 2,
  "name": "changeme",
  "version": "1.0.0",
  "description": "A cross-browser extension built with TypeScript, Mantine UI, and Vite",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' http://localhost:5173 http://localhost:5174; object-src 'self'",
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "changeme"
  },
  "options_page": "src/config/config.html",
  "background": {
    "scripts": ["src/background/background.ts"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"]
    }
  ],
  "web_accessible_resources": [
    "src/popup/popup.html",
    "src/config/config.html"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}